! My .Xdefault/.Xresources file
XTerm*loginShell: true
XTerm*ScrollBar: false
XTerm*selectToClipboard: true

! Dark Blue DOS kinda theme
!XTerm*faceName: ubuntu mono  
XTerm*faceName: More Perfect DOS VGA
!XTerm*faceName: Nouveau IBM 
XTerm*faceSize: 12 
XTerm*allowBoldFonts: false

! Solarized
XTerm*background: #002B36
XTerm*foreground: #D2D2D2
XTerm*borderColor: #343434

!Turning off scrollbar
XTerm*scrollBar:  off

!Starting up with a geometry
XTerm*vt100*geometry:   88x24

