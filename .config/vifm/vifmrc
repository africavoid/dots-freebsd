" Remember that za will toggle hidden files

" Default editor
set vicmd=nvi

" Colorscheme
colorscheme theme

" Ctrl t to enter shell
nnoremap <C-t> :shell <CR>

set showtabline=2

nnoremap <C-n> :tabnext <CR>
nnoremap <C-p> :tabprev <CR>

" Opening certain file types in certain programs
filextype *.pdf mupdf %f &
filextype *.mp3 mpv %f
filextype *.mp4 mpv %f &
filextype *.jpg feh %f &
filextype *.png feh %f &
filextype *.svg feh %f &
filextype *.gif feh %f &
filextype *.bmp feh %f &
filextype *.html qutebrowser %f &
filextype *.c nvim %f
filextype *.h nvim %f
filextype *.cpp nvim %f
filextype *.hpp nvim %f
filextype *.cs nvim %f
filextype *.m nvim %f
filextype *.html nvim %f
filextype *.o bvi %f
filextype *.so bvi %f

